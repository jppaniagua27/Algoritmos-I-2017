#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main ()
{
	int edad;
	cout<<"Ingrese su edad: ";
	cin>>edad;
	if (edad >= 18)
		cout<<"Puede votar!! ";
	if (edad < 18)
		cout<<"No puede votar!! ";
	getch();
}
